<section class="case-cart">
  <div class="case-row case-cart-list">
    <div class="container globalwidth">
      <div class="wrapper">
        <h2 class="center">Вы в 1 минуте от покупки</h2>
        <div class="table items">
          <div class="tr caption hidden-tablet">
            <div class="th">Товар</div>
            <div class="th">&nbsp;</div>
            <div class="th">Цена</div>
            <div class="th">Количество</div>
            <div class="th">Итого</div>
            <div class="th">&nbsp;</div>
          </div>
          <% current_cart.cart_items.each do |cart_item| %>
            <div class="tr item" id="cart-item-<%= cart_item.item.id %>">
              <div class="td td1">
                <figure>
                  <%= link_to cart_item.item do %>
                    <%= image_tag cart_item.item.main_image.thumb_square %>
                  <% end %>
                </figure>
              </div>
              <div class="td td2">
                <div class="title">
                  <%= link_to cart_item.item.title, cart_item.item %>
                </div>
              </div>
              <div class="td td3 hidden-tablet"><div class="price"><%= humanized_money cart_item.price %> руб.</div></div>
              <div class="td td4">
                <div class="count">
                  <%= form_tag add_to_cart_path(cart_item.item), remote: true, class: 'js-order-item' do %>
                    <a class="minus" href="#"></a>
                    <%= text_field_tag :quantity, cart_item.quantity, class: 'js-order-item-quantity', autocomplete: 'off' %>
                    <span class="unit">шт</span>
                    <a class="plus" href="#"></a>
                  <% end %>
                </div>
              </div>
              <div class="td td5"><div class="price"><span class="js-cart-item-total-price"><%= humanized_money cart_item.total_price %></span> руб.</div></div>
              <div class="td td6 hidden-tablet">
                <%= link_to '', remove_from_cart_path(cart_item.item), method: :delete, remote: true, class: 'delete hidden-tablet' %>
                <%= link_to 'Удалить', remove_from_cart_path(cart_item.item), method: :delete, remote: true, class: 'btn btn-grn hidden visible-tablet' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="sum">
    <div class="container globalwidth">
      <span>Итого <span id="cart-total-quantity"><%= current_cart.total_quantity %> <%= Russian.p(current_cart.total_quantity, 'товар', 'товара', 'товаров') %></span><br class="visible-tablet"/> на сумму <b><span id="order-items-price"><%= humanized_money current_cart.total_price %></span> руб.</b></span>
    </div>
  </div>
  <%= form_for @order , remote: true do |f| %>
    <%= f.hidden_field :discount_id, class: 'hidden js-discount-id' %>
    <% unless mobile_device? %>
      <div class="case-row case-cart-delivery">
        <!-- hidden-tablet -->
        <div class="container globalwidth">
          <div class="wrapper">
            <h2 class="center">Как вам доставить товар</h2>
          </div>
          <div class="switcher-wrap">
            <div class="js-switcher switcher table">
              <div class="switcher-cnt tr">
                <% @shipping_methods.each do |shipping_method| %>
                  <label class="td<%= ' current' if @order.shipping_method_id == shipping_method.id %>">
                    <i class="icon icon-<%= shipping_method_icon(shipping_method) %>"></i>
                    <span class="title"><%= shipping_method.title %></span>
                    <span class="price"><%= humanized_money shipping_method.calculate_price(city_id: 1) %> руб.</span>
                    <%= f.radio_button :shipping_method_id, shipping_method.id, class: 'hidden js-order-shipping-method-id' %>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="case-row case-cart-address">
        <!-- hidden-tablet -->
        <div class="container globalwidth">
          <div class="wrapper">
            <h2 class="center">Укажите адрес доставки<br />и контактные данные</h2>
            <div class="forms">
              <div class="field js-order-shipping-info-fields" style='display:none'>
                <div class="table">
                  <div class="tr">
                    <div class="td td1<%= ' error' if @order.errors['city'].any? %>">
                      <div class="chosen">
                        <%= f.select :city, order_city_options_for_select(@cities, @order.city, shipping_methods: @shipping_methods), {}, class: 'chosen-select js-order-city' %>
                      </div>
                    </div>
                    <div class="td td2<%=' error' if @order.errors['address'].any? %>">
                      <%= f.text_field :zip_code, placeholder: 'Индекс' %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="field<%= ' error' if @order.errors['address'].any? %>"><%= f.text_field :address, placeholder: 'Адрес' %></div>
              <div class="field<%= ' error' if @order.errors['name'].any? %>"><%= f.text_field :name, placeholder: 'Имя' %></div>
              <div class="field">
                <div class="table">
                  <div class="tr">
                    <div class="td td1<%= ' error' if @order.errors['phone'].any? %>"><%= f.text_field :phone, placeholder: 'Телефон', class: 'js-order-phone' %></div>
                    <div class="td td2<%= ' error' if @order.errors['email'].any? %>"><%= f.text_field :email, placeholder: 'Эл. почта' %></div>
                  </div>
                </div>
              </div>
              <div class="field"><%= f.text_area :comment, placeholder: 'Комментарий' %></div>
              <div class="field">
                <%= text_field_tag :discount_code, nil, placeholder: 'Подарочная карта или купон' %>
                <div class='message' style="margin: 10px 0 0 0"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="sum hidden-tablet">
      <div class="container globalwidth">
        <span>Итого с доставкой <b><span id="order-total-price"><%= humanized_money @order.total_price %></span> руб.</b></span>
      </div>
    </div>
    <% if mobile_device? %>
      <div class="tablet-bottom visible-tablet">
          <div class="contacts">
              <h2>Мы перезвоним вам, согласуем адрес и время доставки</h2>
              <div class="field<%= ' error' if @order.errors['name'].any? %>"><%= f.text_field :name, placeholder: 'Как вас зовут?' %></div>
              <div class="td td1<%= ' error' if @order.errors['phone'].any? %>"><%= f.text_field :phone, placeholder: 'Ваш номер телефона', class: 'js-order-phone' %></div>
          </div>
      </div>
    <% end %>
    <div class="case-row case-cart-payment">
      <div class="container globalwidth">
        <div class="wrapper">
          <h2 class="center">Как предпочитаете<br /> оплатить покупку</h2>
        </div>
        <div class="switcher-wrap">
          <div class="js-switcher switcher table">
            <div class="switcher-cnt tr">
              <% @payment_methods.each do |payment_method| %>
                <label class="td<%= ' current' if @order.payment_method_id == payment_method.id %>">
                  <i class="icon icon-<%=t "payment_method.order.#{payment_method.name}.icon" %>"></i>
                  <span class="title"><%=t "payment_method.order.#{payment_method.name}.title" %></span>
                  <%= f.radio_button :payment_method_id, payment_method.id, class: 'hidden' %>
                </label>
              <% end %>
            </div>
          </div>
        </div>
        <div class="btn-wrap">
          <button class="btn btn-orn" type="submit">Отправить заказ</button>
        </div>
      </div>
    </div>
  <% end %>
</section>


<%= link_to 'К продуктам', items_path, class: 'back hidden visible-tablet' %>
<section class="case-product">
  <div class="container globalwidth">
    <div class="wrapper">
      <figure>
        <%= link_to @item do %>
          <%= image_tag @item.main_image.full, height: '760', width: '360' %>
        <% end %>
      </figure>
      <div class="info">
        <div class="descript hidden-tablet"><%= @item.motto %></div>
        <div class="ttl"><%= @item.title %></div>
        <% if @item.volume.to_i > 0 %>
          <div class="size">— <%= @item.volume %> мл</div>
        <% end %>
        <div class="text hidden-tablet">
          <p><%= @item.short_description %></p>
        </div>
        <% if @item.discount > 0 %>
          <div class="discount"><%= humanized_money @item.price %> руб.</div>
          <div class="price"><%= humanized_money @item.discount %> руб.</div>
        <% else %>
          <span class="price"><%= humanized_money @item.price %> руб.</span>
        <% end %>
        <%= link_to_add_to_cart @item %>
      </div>
    </div>
  </div>
</section>
<div class="separate">
  <div class="container globalwidth">
    <div class="line"></div>
  </div>
</div>
<%= render_blocks @item.blocks, namespace: :items %>
<%= render 'social_buttons_mobile' %>

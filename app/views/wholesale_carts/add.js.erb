<% if @cart_item.quantity == @quantity %>
  $('#cart-desktop span.count').text('<%= current_wholesale_cart.total_quantity %>');
  $('#cart-desktop span.count').toggleClass('hidden', $('#cart-desktop span.count').text() == 0);
  $('#cart-tablet').text('<%= current_wholesale_cart.total_quantity %>');

  if ($('section.case-cart').length) {
    $('#cart-item-<%= @cart_item.item.id %> .js-cart-item-total-price').text('<%= humanized_money @cart_item.total_price %>');
    $('#order-items-price').text('<%= humanized_money current_wholesale_cart.total_price %>');
    $('#cart-total-quantity').text('<%= "#{current_wholesale_cart.total_quantity} #{Russian.p(current_wholesale_cart.total_quantity, 'товар', 'товара', 'товаров')}" %>');
    updateTotalPrice();
  }
<% else %>
  alert("Товара на складе меньше, чем вы хотите купить. Попробуйте заказать меньшее количество.")
  $('#cart-item-<%= @cart_item.item.id %> input.js-order-item-quantity').val('<%= @cart_item.quantity || 0 %>');
<% end %>
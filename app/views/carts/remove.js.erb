$('#cart-desktop span.count').text('<%= current_cart.total_quantity %>');
$('#cart-tablet').text('<%= current_cart.total_quantity %>');

<% if @cart_item %>
  if ($('section.case-cart').length) {
    $('#cart-item-<%= @cart_item.item.id %>').hide();
    $('#order-items-price').text('<%= humanized_money current_cart.total_price %>');
    $('#cart-total-quantity').text('<%= "#{current_cart.total_quantity} #{Russian.p(current_cart.total_quantity, 'товар', 'товара', 'товаров')}" %>');
    updateTotalPrice();
  }
<% else %>
  $('#cart-item-<%= @item.id %>').hide();
<% end %>